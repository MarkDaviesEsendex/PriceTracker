@using Newtonsoft.Json
@model List<ItemPrice>
@{
    ViewData["Title"] = "About";
}

@{
    var date = JsonConvert.SerializeObject(Model.Select(m => m.TimeStamp.ToString("yyyy-m-d")));
    var prices = JsonConvert.SerializeObject(Model.Select(m => m.Price.Remove(0, 1)));
}

<canvas id="myChart" width="400" height="200"></canvas>
<script>
    var ctx = document.getElementById("myChart");
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: @Html.Raw(date),
            datasets: [{
                label: '# of Votes',
                data: @Html.Raw(prices),
                "fill": false,
                "borderColor": "rgb(75, 192, 192)",
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });
</script>