@page "/user/login"
@inherits LoginComponent

<div class='d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3'>
    <h1 class='h2'>Items</h1>
    <div class='btn-toolbar mb-2 mb-md-0'>
        <div class='btn-group mr-2'>
            <a class='btn btn-sm btn-outline-secondary'>Add Item</a>
            <NavLink href='/prices' class='btn btn-sm btn-outline-secondary'>All Prices</NavLink>
        </div>
    </div>
</div>
<div class='table-responsive'>
    <div class='form-group'>
        <label for='@User.Username'>Username</label>
        <input class='form-control' aria-describedby='emailHelp' placeholder='Enter username' bind='@User.Username' />
    </div>
    <div class='form-group'>
        <label for='@User.Password'>Password</label>
        <input type='password' class='form-control' id='exampleInputPassword1' placeholder='Password' bind='@User.Password' />
    </div>
    <button class='btn btn-primary' onclick='@(async () => await Login())'>Submit</button>
</div>